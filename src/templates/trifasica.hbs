<section id='release' style='background: {{data.background}};color:{{data.color}};'>
  <div class='container'>
    <p class='release-release' style='color:white;color:{{data.textColor}}'>{{data.release}}</p>

    <p class='release-work'>{{data.work}}</p>

    <p class='release-artist'>{{data.artits}}</p>

    <div class='release-iframe' style='margin-bottom:10px'>
      {{{data.iframe}}}
    </div>

    <div
      style='background:#dfdfdf; max-width:550px;margin:auto;padding:2rem;border:1px solid #d2d2d2'
    >
      <p style="font-family:'Oswald';font-size:2rem;margin:0;">DESCARGA DISCO</p>
      <form>
        <p style='font-size:1rem;margin:0;'>Ingresá el código de 4 dígitos</p>
        <p><input
            id='n1'
            placeholder='*'
            style='width:40px;height:50px;font-size:45px;text-align:center;background:black;border:0;color:white'
            maxlength='1'
          />
          <input
            id='n2'
            placeholder='*'
            style='width:40px;height:50px;font-size:45px;text-align:center;background:black;border:0;color:white'
            maxlength='1'
          />
          <input
            id='n3'
            placeholder='*'
            style='width:40px;height:50px;font-size:45px;text-align:center;background:black;border:0;color:white'
            maxlength='1'
          />
          <input
            id='n4'
            placeholder='*'
            style='width:40px;height:50px;font-size:45px;text-align:center;background:black;border:0;color:white'
            maxlength='1'
          /></p>
        <p style='text-align:center'><button
            type='button'
            id='descargar'
            style="   width: 174px;
    border: 0;
    background: #ff8f00;
    font-family: 'Oswald';
    font-size: 1.25rem;"
          >DESCARGAR</button></p>
        <p id='error' style='display: none'>Código inválido</p>

      </form>
      <div id='descargaBotones' style='display:none;text-align:center'>
        <p style='font-size:1rem;margin:0;'>Descargando edición [<span id='edicion'></span>]</p>
        <p>
          <a
            href='https://drive.google.com/file/d/19vDV1i86fUIe5nHpXH_wEJDfzdtl4Yu3/view?usp=drive_link'
            target='_blank'
            style="    display:inline-block;width: 174px;
    border: 0;
    background: #ff8f00;
    font-family: 'Oswald';
    font-size: 1.25rem;"
          >Formato AAC</a>
        </p>

        <p>
          <a
            href='https://drive.google.com/file/d/1pY28lBV4agbN01CyqCVEDXTuO1slrkZC/view?usp=drive_link'
            target='_blank'
            style="    display:inline-block;width: 174px;
    border: 0;
    background: #ff8f00;
    font-family: 'Oswald';
    font-size: 1.25rem;"
          >Formato AIFF</a>
        </p>

        <p>
          <a
            href='https://drive.google.com/file/d/1-g5Hsu8APwLBM0ap9Hbxwu1d2dKMI7ww/view?usp=drive_link'
            target='_blank'
            style="    display:inline-block;width: 174px;
    border: 0;
    background: #ff8f00;
    font-family: 'Oswald';
    font-size: 1.25rem;"
          >Formato ALAC</a>
        </p>

        <p>
          <a
            href='https://drive.google.com/file/d/1fKWXHv4WdS4QXS6a54J6NLL7J2Us0qEa/view?usp=drive_link'
            target='_blank'
            style="    display:inline-block;width: 174px;
    border: 0;
    background: #ff8f00;
    font-family: 'Oswald';
    font-size: 1.25rem;"
          >Formato FLAC</a>
        </p>

        <p>
          <a
            href='https://drive.google.com/file/d/1ufLj1s1GX0yiVZgce8ueHpfix1rcU5m_/view?usp=drive_link'
            target='_blank'
            style="    display:inline-block;width: 174px;
    border: 0;
    background: #ff8f00;
    font-family: 'Oswald';
    font-size: 1.25rem;"
          >Formato MP3</a>
        </p>

        <p>
          <a
            href='https://drive.google.com/file/d/1ZCj0sey6J2PwaaRQQJ3bji5mdsVxEx9o/view?usp=drive_link'
            target='_blank'
            style="    display:inline-block;width: 174px;
    border: 0;
    background: #ff8f00;
    font-family: 'Oswald';
    font-size: 1.25rem;"
          >Formato OGG</a>
        </p>

        <p>
          <a
            href='https://drive.google.com/file/d/1tknl4nbXE2rSjypDZ8hnuqz6nv0Ls0XG/view?usp=drive_link'
            target='_blank'
            style="    display:inline-block;width: 174px;
    border: 0;
    background: #ff8f00;
    font-family: 'Oswald';
    font-size: 1.25rem;"
          >Formato WAV</a>
        </p>

      </div>
    </div>

    <div class='release-body' style='color: white;max-width: 640px;margin:auto;text-align:justify'>
      {{{data.body}}}
    </div>

    <div class='release-gallery' style='display: flex; flex-wrap:wrap;'>
      {{#each data.gallery}}
        <div style='width: {{width}};padding:10px;box-sizing:border-box;'>
          <img src='{{src}}' width='100%' loading='lazy' />
        </div>
      {{/each}}
    </div>

  </div>

  <div id='descargaModal' style='display:none'></div>
  <style>
    .release-gallery img{cursor:pointer;} .zoom-gallery{ align-items: center;justify-content:
    center; position:fixed; top:0; left:0; width:100%; height:100%; z-index:999999999999999;
    display:none; background-image: radial-gradient(circle, #686868, #4e4e4e, #353535, #1d1d1d,
    #000000);} .zoom-gallery img{ height: 90vh; }

  </style>

</section>

