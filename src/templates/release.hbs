<section id='release' style='background: {{data.background}};color:{{data.color}};'>
  <div class='container'>
    <p class='release-release'>{{data.release}}</p>
    <p class='release-artist'>{{data.artits}}</p>
    <p class='release-work'>{{data.work}}</p>

    <div class='release-body'>
      {{{data.body}}}
    </div>

    <div class='release-iframe'>
      {{{data.iframe}}}
    </div>

    <div class='release-gallery'>
      {{#each data.gallery}}
        <img src='{{this}}' width='100%' />
      {{/each}}
    </div>

  </div>

  <style>
    .release-work{ background: -webkit-linear-gradient({{data.color}}, #333);
    -webkit-background-clip: text; -webkit-text-fill-color: transparent; }

  </style>

</section>